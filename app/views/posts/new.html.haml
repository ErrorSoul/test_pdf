.row
  .col-md-12.col-md-offset-3
    = form_for(@post) do |f|

      - if @post.errors.any?
        #error_explanation
          %h5
            = pluralize(@post.errors.count, "error")
            prohibited this post from being saved:
          %ul
            - @post.errors.full_messages.each do |msg|
              %li= msg
      .col-md-10    
        - (1..10).each do |n|

          .control-group
            = f.label "#{'text# ' + n.to_s + " "}"
            = f.text_area "#{'text' + n.to_s}"

        .actions
          = f.submit
        
